<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:layout_margin="10dp"
    android:background="#fff">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/loginimg"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="মোবাইল নাম্বার"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <EditText
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Mobile no"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="12dp"
        android:background="@drawable/edit_text_border"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="পাসওয়ার্ড "
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        android:textColor="#000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint=" Password"
        android:inputType="numberPassword"
        android:padding="10dp"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_border"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">


    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="মনে রাখুন"
        android:buttonTint="#730E65"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" পাসওয়ার্ড ভুলে গেছেন? "
        app:layout_constraintEnd_toEndOf=""
        android:textColor="#730E65"
        android:gravity="right"
        />





        />



</LinearLayout>

    <Button
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="লগইন"
        android:background="@drawable/button_border"
        android:textSize="14dp"/>


    <Button
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="নতুন একাউন্ট করতে চান"
        android:background="@drawable/border_button"
        android:textSize="14dp"

        android:textColor="#730E65"/>


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>